<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/NOHA ALEX.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-success border-bottom box-shadow mb-3 navbar-custom">

            <div class="col-4 "></div>

            <div class="col-4 text-center ">
                <a class="nav-link text-dark fs-3" asp-area="" asp-controller="Home" asp-action="AboutMe"><img class="anchor" src="/images/NOHA ALEX.png"/></a>
            </div>

            <div class="container-fluid col-4">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-grow-1 justify-content-evenly">

                         <li class="nav-item">
                            <a class="nav-link text-light btn rounded-pill btn-primary btn-outline-dark m-1 " asp-area="" asp-controller="Home" asp-action="AboutMe">About Me</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light btn rounded-pill btn-primary btn-outline-dark m-1 " asp-area="" asp-controller="Home" asp-action="Resume">Resume</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light btn rounded-pill btn-primary btn-outline-dark m-1 " asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                   

                </ul>

            </div>


        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
